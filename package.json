{
  "name": "trillo",
  "version": "1.0.0",
  "description": "A learning web project to explore and apply modern CSS Flexbox",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/main.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/main.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngannguyen117/trillo.git"
  },
  "author": "Ngan Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ngannguyen117/trillo/issues"
  },
  "homepage": "https://github.com/ngannguyen117/trillo#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
